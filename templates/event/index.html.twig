{% extends 'base.html.twig' %} {% block title %}Event index{% endblock %} {% block body %}

<div class="container">
    <h1 class="text-center">Events in Austria</h1>
    <div class="row row-cols-3">
        {% for event in events %}
        <div>
            <div class="card" style="width: 18rem" heigth: "18rem";>
                <img src="{{event.picture}}" class="card-img-top" alt="{{ event.name }}">
                <div class="card-body">
                    <p class="card-text">{{ event.name }}</p>
                    <p class="card-text">{{ event.description }}</p>
                    <p class="card-text">{{ event.eventDate ? event.eventDate|date('Y-m-d H:i:s') : '' }}</p>
                    <p class="card-text">{{ event.location }}</p>
                    <a class="btn btn-outline-success" href="{{ path('app_event_show', {'id': event.id}) }}">Details</a>
                    <a class="btn btn-outline-warning" href="{{ path('app_event_edit', {'id': event.id}) }}">Edit</a>
                    <a class="btn btn-outline-danger" href="{{ path('app_event_delete', {'id': event.id}) }}">Delete</a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>



