{% extends 'base.html.twig' %} {% block title %}Events in Austria index{% endblock %} {% block stylesheets %}
<link rel="stylesheet" href="{{ asset(" css/style.css ") }}"> {% endblock %} {% block body %}

<div class="container">
    <h1 class="text-center">Events in Austria</h1>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        {% for event in events %}
        <div>
            <div class="card" style="width: 18rem" heigth: "18rem";>
                <img src="{{event.picture}}" class="card-img-top" alt="{{ event.name }}">
                <div class="card-body">
                    <p class="card-text">{{ event.name }}</p>
                    <p class="card-subtitle mb-2 text-body-secondary">{{ event.description }}</p>
                    <p class="card-text">{{ event.eventDate ? event.eventDate|date('Y-m-d H:i:s') : '' }}</p>
                    <p class="card-text">{{ event.location }}</p>
                    <a class="btn btn-outline-success" href="{{ path('app_event_show', {'id': event.id}) }}">Details</a>
                    <a class="btn btn-outline-warning" href="{{ path('app_event_edit', {'id': event.id}) }}">Edit</a>
                    <a class="btn btn-outline-danger" href="{{ path('app_event_delete', {'id': event.id}) }}" onclick="return confirm('Are you sure you want to delete this?')">Delete</a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>



<a class="btn btn-primary" href="{{ path('app_event_new') }}">Create new Event</a> {% endblock %}